<div class="row">
<h1><%= usershow.username %>s Reviews</h1>
</div>
<div class="row">
  <% posts.forEach(posts => { %>
  <div class="col s12 m4">
      <div class="card">
        <div class="card-image waves-effect waves-block waves-light">
          <img class="activator" src="<%= posts.photo %>">
        </div>
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4"><%= posts.name %><i class="material-icons right">more_vert</i></span>
          <p><a href="/posts/<%= posts._id %>" class="green-text">View Review</a></p>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4">
            <%= posts.name %><i class="material-icons right">close</i>
          </span>
          <span class="rating-wrap valign-wrapper">
            <p>Overall:</p>
            <% for (let i = 0; i < posts.rating; i++) { %>
              <i class="fas fa-star"></i>
            <% } %>
          </span>
          <span class="rating-wrap valign-wrapper">
          <p>Service:</p>
          <% for (let i = 0; i < posts.service; i++) { %>
            <i class="fas fa-utensils"></i>
          <% } %>
          </span>
          <span class="rating-wrap valign-wrapper">
          <p>Food:</p>
          <% for (let i = 0; i < posts.food; i++) { %>
            <i class="material-icons pizza">local_pizza</i>
          <% } %>
          </span>
          <span class="rating-wrap valign-wrapper">
          <p>Price:</p>
          <% for (let i = 0; i < posts.price; i++) { %>
            <i class="far fa-money-bill-alt"></i>
          <% } %>
          </span>
          <p> <%= posts.location %></p>
          <p> <%= moment(posts.date).format("MMM Do YY"); %> </p>
        </div>
      </div>
  </div>
  <% }) %>
</div>
