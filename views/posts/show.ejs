<div class="row">
  <div class="col s12 m2"></div>
  <div class="col s12 m8">
    <div class="card">
      <div class="card-image">
        <img src="<%= post.photo %>">
      </div>
      <div class="card-content">
        <span class="card-title grey-text text-darken-4">
          <a href="/users/<%= post.user._id %>"><%= post.user.username %><span id="userlinks">s reviews</span></a>
        </span>
        <p class="myTitle"><%= post.name %></p>
        <span class="rating-wrap valign-wrapper">
          <p>Overall:</p>
          <% for (let i = 0; i < post.rating; i++) { %>
            <i class="fas fa-star"></i>
          <% } %>
        </span>
        <span class="rating-wrap valign-wrapper">
        <p>Service:</p>
        <% for (let i = 0; i < post.service; i++) { %>
          <i class="fas fa-utensils"></i>
        <% } %>
        </span>
        <span class="rating-wrap valign-wrapper">
        <p>Food:</p>
        <% for (let i = 0; i < post.food; i++) { %>
          <i class="material-icons pizza">local_pizza</i>
        <% } %>
        </span>
        <span class="rating-wrap valign-wrapper">
        <p>Price:</p>
        <% for (let i = 0; i < post.price; i++) { %>
          <i class="far fa-money-bill-alt"></i>
        <% } %>
        </span>
        <span class="rating-wrap valign-wrapper">
        <p>Location: <%= post.location %></p>
        </span>
        <span class="rating-wrap valign-wrapper">
        <p>Date-created: <%= moment(post.date).format("MMM Do YY"); %> </p>
        </span>
      </div>
      <div class="card-action valign-wrapper">
        <% if (locals.user) { %>
          <% if((post.user && post.user.id) === locals.user.id) { %>
            <a href="/posts/<%= post._id %>/edit" class="orange-text" id="floatright">Edit Review</a>
          <% } %>
        <% } %>
        <% if (locals.user) { %>
          <% if((post.user && post.user.id) === locals.user.id) { %>
            <form action="/posts/<%= post.id %>" method="post">
              <input type="hidden" name="_method" value="DELETE">
              <button class="btn red">Delete Review</button>
            </form>
          <% } %>
        <% } %>
      </div>
    </div>
  </div>
  <div class="col s12 m2"></div>
</div>
