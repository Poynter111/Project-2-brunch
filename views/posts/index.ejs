<div class="row">
  <h2>Reviews</h2>
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s3"><a href="#test1" class="active">All Reviews</a></li>
      <% if(locals.isLoggedIn) { %>
      <li class="tab col s3"><a class="active" href="#test2">My Reviews</a></li>
      <% } %>
    </ul>
  </div>
</div>
<div class="row">
  <div id="test1" class="col s12">
    <% post.forEach(post => { %>
      <div class="col s12 m6">
        <div class="card green accent-3">
          <div class="card-content white-text">
            <span class="card-title"><%= post.name %></span>
            <p> <%= post.location %></p>
            <p> <%= post.date %></p>
            <p> <%= post.user.username %></p>
            <div class="card-image">
              <img src="<%= post.photo %>">
            </div>
            <p> <%= post.rating %></p>
          </div>
          <div class="card-action">
            <a href="/posts/<%= post._id %>" class="green-text">View Review</a>
            <a href="/posts/<%= post._id %>/edit" class="orange-text">Edit Review</a>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
  <% if(locals.isLoggedIn) {%>
   <div id="test2" class="col s12">
     <% post.forEach(post => { %>
       <% if((post.user && post.user.id) === locals.user.id) { %>
       <div class="col s12 m6">
         <div class="card green accent-3">
           <div class="card-content white-text">
           <span class="card-title"><%= post.name %></span>
           <p> <%= post.location %></p>
           <p> <%= post.date %></p>
           <p> <%= post.user.username %></p>
           <img src="<%= post.photo %>">
           <p> <%= post.rating %></p>
           </div>
           <div class="card-action">
             <a href="/posts/<%= post._id %>" class="green-text">View Review</a>
             <a href="/posts/<%= post._id %>/edit" class="orange-text">Edit Review</a>
           </div>
         </div>
       </div>
       <% } %>
     <% }) %>
    <% } %>
  </div>
</div>
