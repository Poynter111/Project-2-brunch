<div class="row">
  <h2>Reviews</h2>
  <div class="col s12">
    <ul class="tabs">
      <li class="tab col s6"><a href="#test1" class="active">All Reviews</a></li>
      <% if(locals.isLoggedIn) { %>
      <li class="tab col s6"><a class="active" href="#test2">My Reviews</a></li>
      <% } %>
    </ul>
  </div>
</div>
<div class="row">
  <div id="test1" class="col s12">
    <% post.forEach(post => { %>
      <div class="col s12 m4">
        <div class="card">
          <div class="card-image waves-effect waves-block waves-light">
            <img class="activator" src="<%= post.photo %>">
          </div>
          <div class="card-content">
            <span class="card-title activator grey-text text-darken-4"><%= post.name %><i class="material-icons right">more_vert</i></span>
            <a href="/posts/<%= post._id %>" class="green-text">View Review</a>
            <% if (locals.user) { %>
              <% if((post.user && post.user.id) === locals.user.id) { %>
                <a href="/posts/<%= post._id %>/edit" class="orange-text" class="right-align">Edit Review</a>
              <% } %>
            <% } %>
          </div>
          <div class="card-reveal">
            <span class="card-title grey-text text-darken-4"><%= post.user.username %><i class="material-icons right">close</i></span>
            </br>
            <p><%= post.name %></p>
            Overall:
            <% for (let i = 0; i < post.rating; i++) { %>
              <i class="fas fa-star"></i>
            <% } %>
            </br>
            Service:
            <% for (let i = 0; i < post.service; i++) { %>
              <i class="fas fa-utensils"></i>
            <% } %>
            </br>
            Food:
            <% for (let i = 0; i < post.food; i++) { %>
              <i class="material-icons pizza">local_pizza</i>
            <% } %>
            </br>
            Price:
            <% for (let i = 0; i < post.price; i++) { %>
              <i class="far fa-money-bill-alt"></i>
            <% } %>
            </br>
            <p> <%= post.location %></p>
            <p> <%= post.date %></p>
            <div class="card-action">
              <a href="/users/<%= post.user._id %>"><%= post.user.username %><span id="userlinks">s other reviews</span></a>
            </div>
          </div>

        </div>
      </div>
    <% }) %>
  </div>
  <% if(locals.isLoggedIn) {%>
   <div id="test2" class="col s12">
     <% post.forEach(post => { %>
       <% if((post.user && post.user.id) === locals.user.id) { %>
       <div class="col s12 m4">
       <div class="card">
         <div class="card-image waves-effect waves-block waves-light">
           <img class="activator" src="<%= post.photo %>">
         </div>
         <div class="card-content">
           <span class="card-title activator grey-text text-darken-4"><%= post.name %><i class="material-icons right">more_vert</i></span>
           <a href="/posts/<%= post._id %>" class="green-text">View Review</a>
           <% if (locals.user) { %>
             <% if((post.user && post.user.id) === locals.user.id) { %>
               <a href="/posts/<%= post._id %>/edit" class="orange-text">Edit Review</a>
             <% } %>
           <% } %>
         </div>
         <div class="card-reveal">
           <span class="card-title grey-text text-darken-4"><%= post.user.username %><i class="material-icons right">close</i></span>
           <p> <%= post.location %></p>
           <p> <%= post.date %></p>
           <p> <%= post.rating %></p>
         </div>
       </div>
       </div>
       <% } %>
     <% }) %>
    <% } %>
  </div>
</div>
